generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  AGENT
  UNDERWRITER
  CLAIMS_OFFICER
  CUSTOMER
}

enum ProductType {
  HEALTH
  LIFE
  MOTOR
  TRAVEL
}

enum QuoteStatus {
  DRAFT
  PENDING
  APPROVED
  REJECTED
}

enum PolicyStatus {
  ACTIVE
  LAPSED
  CANCELLED
  RENEWED
}

enum ClaimStatus {
  SUBMITTED
  IN_REVIEW
  APPROVED
  REJECTED
  PAID
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}

enum InvoiceStatus {
  OPEN
  PAID
  VOID
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(CUSTOMER)
  name      String
  createdAt DateTime @default(now())
  profile   CustomerProfile?
  quotes    Quote[]
  policies  Policy[]
  claims    Claim[]
  payments  Payment[]
  auditLogs AuditLog[] @relation("AuditLogActor")
  refreshTokens RefreshToken[]
  passwordResets PasswordReset[]
}

model CustomerProfile {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int      @unique
  phone       String?
  address     String?
  dateOfBirth DateTime?
  kycDocs     Json?
  dependents  Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Product {
  id             Int         @id @default(autoincrement())
  name           String
  type           ProductType
  description    String
  basePremium    Float
  coverageLimits Json?
  premiumRules   Json?
  exclusions     Json
  createdAt      DateTime    @default(now())
  quotes         Quote[]
  policies       Policy[]
}

model Quote {
  id         Int         @id @default(autoincrement())
  user       User        @relation(fields: [userId], references: [id])
  userId     Int
  product    Product     @relation(fields: [productId], references: [id])
  productId  Int
  premium    Float
  status     QuoteStatus @default(PENDING)
  version    Int         @default(1)
  metadata   Json
  createdAt  DateTime    @default(now())
  policy     Policy?
}

model Policy {
  id           Int         @id @default(autoincrement())
  policyNumber String      @unique
  quote        Quote       @relation(fields: [quoteId], references: [id])
  quoteId      Int         @unique
  product      Product     @relation(fields: [productId], references: [id])
  productId    Int
  user         User        @relation(fields: [userId], references: [id])
  userId       Int
  premium      Float
  startDate    DateTime
  endDate      DateTime
  premiumPaid  Boolean     @default(false)
  status       PolicyStatus @default(ACTIVE)
  claims       Claim[]
  payments     Payment[]
  invoices     Invoice[]
  createdAt    DateTime    @default(now())
}

model Claim {
  id           Int         @id @default(autoincrement())
  policy       Policy      @relation(fields: [policyId], references: [id])
  policyId     Int
  user         User        @relation(fields: [userId], references: [id])
  userId       Int
  claimType    ProductType
  amount       Float
  incidentDate DateTime
  description  String
  status       ClaimStatus @default(SUBMITTED)
  attachments  Json?
  createdAt    DateTime    @default(now())
}

model Payment {
  id         Int          @id @default(autoincrement())
  policy     Policy       @relation(fields: [policyId], references: [id])
  policyId   Int
  user       User         @relation(fields: [userId], references: [id])
  userId     Int
  amount     Float
  method     String
  reference  String?
  status     PaymentStatus @default(PAID)
  paidAt     DateTime     @default(now())
  createdAt  DateTime     @default(now())
}

model Invoice {
  id         Int          @id @default(autoincrement())
  policy     Policy       @relation(fields: [policyId], references: [id])
  policyId   Int
  number     String       @unique
  amount     Float
  status     InvoiceStatus @default(OPEN)
  dueDate    DateTime
  paidAt     DateTime?
  createdAt  DateTime     @default(now())
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  actor      User?    @relation("AuditLogActor", fields: [actorId], references: [id])
  actorId    Int?
  action     String
  entityType String
  entityId   String
  metadata   Json?
  createdAt  DateTime @default(now())
}

model RefreshToken {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  token      String   @unique
  expiresAt  DateTime
  revokedAt  DateTime?
  createdAt  DateTime @default(now())
}

model PasswordReset {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  token      String   @unique
  expiresAt  DateTime
  usedAt     DateTime?
  createdAt  DateTime @default(now())
}
